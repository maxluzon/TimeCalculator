<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.maxluzon.timecalculator.MainActivity">

    <TextView
        android:id="@+id/initial_date_display"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/from_date"/>

    <Button
        android:id="@+id/pick_initial_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initial_date_button"
        android:layout_alignBaseline="@id/initial_date_display"
        android:layout_toRightOf="@id/initial_date_display"
        android:layout_toEndOf="@id/initial_date_display"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/end_date_display"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/initial_date_display"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/to_date"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/pick_end_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_date_button"
        android:layout_below="@id/pick_initial_date_button"
        android:layout_toRightOf="@id/end_date_display"
        android:layout_toEndOf="@id/end_date_display"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/today_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/today_button"
        android:layout_below="@id/pick_end_date_button"
        android:layout_toRightOf="@id/end_date_display"
        android:layout_toEndOf="@id/end_date_display"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/time_elapsed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="20dp"
        android:text="@string/time_elapsed_label"
        android:textStyle="bold"
        android:layout_below="@id/end_date_display"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/time_elapsed_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/time_elapsed_text"
        android:layout_toEndOf="@id/time_elapsed_text"
        android:layout_below="@id/time_elapsed_text"
        android:text=""
        android:textStyle="italic"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/days_elapsed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:text="@string/elapsed_days_label"
        android:layout_below="@id/time_elapsed_result"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/days_elapsed_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/days_elapsed_text"
        android:layout_toEndOf="@id/days_elapsed_text"
        android:layout_below="@id/days_elapsed_text"
        android:text=""
        android:textStyle="italic"
        android:textSize="20sp"/>

</RelativeLayout>
